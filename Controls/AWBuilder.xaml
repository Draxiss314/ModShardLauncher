<UserControl x:Class="ModShardLauncher.Controls.AWBuilder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModShardLauncher.Controls" xmlns:controls="clr-namespace:ModShardLauncher.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="896">
    <Grid RenderOptions.BitmapScalingMode="NearestNeighbor">
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Sprites/ModInfosBG.png"/>
        </Grid.Background>
        <Grid Margin="30">
            <TextBlock Style="{StaticResource sFont}" Text="{DynamicResource BuilderTitle}" 
                    Foreground="White" HorizontalAlignment="Center" Margin="0,64,0,0" FontSize="40"/>
            <TextBlock Style="{StaticResource sFont}" Text="{DynamicResource FutureFeature}" 
                    Foreground="#95796A" HorizontalAlignment="Center" Margin="0,280,0,0" FontSize="18"/>
        </Grid>
    </Grid>
</UserControl>
